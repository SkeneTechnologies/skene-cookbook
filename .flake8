[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    .pytest_cache,
    htmlcov,
    .coverage,
    *.egg-info,
    node_modules,
    archived

# Relaxed for AI-generated code and rapid prototyping
max-complexity = 15
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
