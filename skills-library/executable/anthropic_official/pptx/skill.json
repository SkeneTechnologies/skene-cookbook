        "type": "object",
        "description": "Content specification for creating or editing presentations",
        "properties": {
          "title": {
            "type": "string",
            "description": "Main title of the presentation"
          },
          "slides": {
            "type": "array",
            "description": "Array of slide definitions",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "description": "Slide title"
                },
                "content": {
                  "type": "string",
                  "description": "Main content or body text"
                },
                "bullets": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Bullet points for the slide"
                },
                "notes": {
                  "type": "string",
                  "description": "Speaker notes for the slide"
                },
                "layout": {
                  "type": "string",
                  "description": "Layout type or template slide index"
                }
              }
            }
          }
        }
      },
      "design": {
        "type": "object",
        "description": "Design specifications for presentation creation",
        "properties": {
          "theme": {
            "type": "string",
            "description": "Theme or subject matter to inform design choices"
          },
          "color_palette": {
            "type": "array",
