            "items": {
              "type": "object",
              "properties": {
                "command": {
                  "type": "string",
                  "description": "Server start command (e.g., 'npm run dev', 'python server.py')"
                },
                "port": {
                  "type": "integer",
                  "description": "Port number the server will listen on",
                  "minimum": 1,
                  "maximum": 65535
                },
                "working_directory": {
                  "type": "string",
                  "description": "Working directory for the server command"
                }
              },
              "required": [
                "command",
                "port"
              ]
            }
          }
        }
      },
