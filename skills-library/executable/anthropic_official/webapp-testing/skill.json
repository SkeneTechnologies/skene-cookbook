        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "click",
                "fill",
                "select",
                "navigate",
                "wait",
                "screenshot",
                "assert"
              ],
              "description": "Type of action to perform"
            },
            "selector": {
              "type": "string",
              "description": "CSS selector, text selector, or role selector for the element"
            },
            "value": {
              "type": "string",
              "description": "Value for fill/select actions or URL for navigate"
            },
            "timeout": {
              "type": "integer",
              "description": "Timeout in milliseconds for the action",
              "minimum": 0
            }
          },
          "required": [
            "type"
          ]
        }
      },
      "wait_for_network_idle": {
        "type": "boolean",
