  "outputSchema": {
    "type": "object",
    "properties": {
      "algorithmicPhilosophy": {
        "type": "object",
        "description": "The conceptual framework and computational aesthetic movement created",
        "properties": {
          "movementName": {
            "type": "string",
            "description": "1-2 word name for the generative art movement",
            "minLength": 1,
            "maxLength": 50
          },
          "philosophyText": {
            "type": "string",
            "description": "4-6 paragraph manifesto explaining the algorithmic philosophy, computational processes, and aesthetic vision",
            "minLength": 500
          },
          "conceptualSeed": {
            "type": "string",
            "description": "The subtle conceptual thread deduced from the original request and woven into the algorithm",
            "minLength": 1
          },
          "fileName": {
            "type": "string",
            "description": "Filename of the philosophy markdown file",
            "pattern": "^.*\\.md$"
          }
        },
        "required": [
          "movementName",
          "philosophyText",
          "conceptualSeed",
          "fileName"
        ]
      },
      "interactiveArtwork": {
        "type": "object",
        "description": "The self-contained HTML artifact with p5.js implementation",
        "properties": {
          "fileName": {
            "type": "string",
