      "userRequest": {
        "type": "string",
        "description": "The user's request for algorithmic art - can be a theme, concept, aesthetic direction, or artistic idea that serves as inspiration for the generative algorithm",
        "minLength": 1
      },
      "generateVariations": {
        "type": "boolean",
        "description": "Whether to generate multiple variations (seeds 1-100) or just a single interactive viewer",
        "default": false
      },
      "specificSeed": {
        "type": "integer",
        "description": "Optional specific seed number to start with for reproducible results",
        "minimum": 0
      },
      "preferredStyle": {
        "type": "string",
        "enum": [
          "organic",
          "geometric",
          "abstract",
          "flow_field",
          "particle_system",
          "recursive",
          "mathematical",
          "chaotic",
          "minimal",
          "any"
        ],
        "description": "Optional hint about preferred algorithmic style - serves as guidance but doesn't constrain creative freedom",
        "default": "any"
      },
      "animated": {
        "type": "boolean",
        "description": "Whether the artwork should be animated (continuous draw) or static (single frame)",
        "default": false
      },
      "colorPreference": {
        "type": "string",
        "description": "Optional color direction or palette preference (e.g., 'warm tones', 'monochrome', 'vibrant', 'pastel')",
        "maxLength": 200
      }
