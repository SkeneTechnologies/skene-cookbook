            "type": "integer",
            "description": "The default seed value used in the artwork",
            "minimum": 0
          },
          "parameters": {
            "type": "array",
            "description": "List of adjustable parameters in the artwork",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Parameter name"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "slider",
                    "color",
                    "input",
                    "checkbox"
                  ],
                  "description": "UI control type"
                },
                "defaultValue": {
                  "description": "Default value for the parameter"
                },
                "range": {
                  "type": "object",
                  "description": "Min/max/step for numeric parameters",
                  "properties": {
                    "min": {
                      "type": "number"
                    },
                    "max": {
                      "type": "number"
                    },
                    "step": {
                      "type": "number"
                    }
                  }
                }
              },
              "required": [
                "name",
                "type",
                "defaultValue"
              ]
            },
            "minItems": 1
          },
          "isAnimated": {
            "type": "boolean",
            "description": "Whether the artwork uses continuous animation or is static"
          },
          "canvasSize": {
            "type": "object",
            "description": "Dimensions of the p5.js canvas",
            "properties": {
              "width": {
                "type": "integer",
                "minimum": 1
              },
              "height": {
                "type": "integer",
                "minimum": 1
              }
            },
            "required": [
              "width",
              "height"
            ]
          },
          "features": {
            "type": "array",
            "description": "Key features of the implemented algorithm",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "fileName",
          "defaultSeed",
          "parameters",
          "isAnimated",
          "canvasSize"
        ]
      },
      "usageInstructions": {
        "type": "string",
        "description": "Brief instructions on how to use the interactive artwork (seed navigation, parameter adjustment, etc.)"
      }
    },
    "required": [
      "algorithmicPhilosophy",
      "interactiveArtwork",
      "usageInstructions"
    ]
