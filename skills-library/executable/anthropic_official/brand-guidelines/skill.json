            "hex": {
              "type": "string",
              "description": "Hex color code",
              "pattern": "^#[0-9a-fA-F]{6}$"
            },
            "usage_count": {
              "type": "integer",
              "description": "Number of times this color was applied"
            }
          }
        },
        "description": "List of Anthropic brand colors used in the artifact"
      },
      "warnings": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Any warnings or issues encountered during branding"
