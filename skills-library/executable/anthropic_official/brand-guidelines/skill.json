          },
          "shapes": {
            "type": "integer",
            "description": "Number of shapes colored with accent colors"
          }
        }
      },
      "brand_colors_used": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Color name (e.g., Dark, Light, Orange)"
