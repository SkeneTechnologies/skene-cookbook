              },
              "lora": {
                "type": "boolean",
                "description": "Whether Lora font was available"
              }
            }
          },
          "fallback_fonts_used": {
            "type": "boolean",
            "description": "Whether fallback fonts (Arial/Georgia) were used"
          }
        }
      },
      "elements_styled": {
        "type": "object",
        "description": "Count of elements styled",
        "properties": {
          "headings": {
            "type": "integer",
