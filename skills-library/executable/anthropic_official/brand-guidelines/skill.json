        "default": "auto"
      },
      "accent_priority": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "orange",
            "blue",
            "green"
          ]
        },
        "description": "Order of accent colors to cycle through",
        "default": [
          "orange",
          "blue",
          "green"
        ]
      }
    },
    "required": [
      "artifact_type"
    ],
    "additionalProperties": false
  },
