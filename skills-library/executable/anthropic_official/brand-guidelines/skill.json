        "enum": [
          "presentation",
          "document",
          "slide",
          "report",
          "diagram",
          "infographic",
          "other"
        ]
      },
      "artifact_path": {
        "type": "string",
        "description": "File path or identifier of the artifact to brand",
        "format": "uri-reference"
      },
      "artifact_content": {
        "type": "object",
        "description": "Content structure of the artifact if not file-based",
        "properties": {
          "headings": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of heading texts to style"
          },
          "body_text": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of body text content to style"
          },
          "shapes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "description": "Shape type (rectangle, circle, etc.)"
                },
                "id": {
                  "type": "string",
                  "description": "Shape identifier"
                }
              }
            },
            "description": "Non-text shapes to apply accent colors to"
          }
        }
      },
      "apply_colors": {
        "type": "boolean",
        "description": "Whether to apply Anthropic brand colors",
        "default": true
      },
      "apply_typography": {
        "type": "boolean",
        "description": "Whether to apply Anthropic typography (Poppins and Lora fonts)",
        "default": true
      },
      "color_scheme": {
        "type": "string",
        "description": "Primary color scheme to use",
        "enum": [
          "dark",
          "light",
          "auto"
