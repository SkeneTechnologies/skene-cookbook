{
  "id": "community_ambassador_program",
  "version": "1.0.0",
  "name": "Ambassador Program Manager",
  "description": "Manages the community ambassador program including recruitment, onboarding, activities, and rewards.",
  "domain": "community",
  "tools": [
    {
      "name": "crm.get_contacts",
      "required": true
    },
    {
      "name": "crm.update_contact",
      "required": true
    },
    {
      "name": "ai.score",
      "required": true
    },
    {
      "name": "messaging.send_email",
      "required": true
    },
    {
      "name": "analytics.track_event",
      "required": true
    },
    {
      "name": "inventory.reserve",
      "required": false
    }
  ],
  "exitStates": [
    "swag_manager",
    "event_manager",
    "champion_identifier",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": [
          "recruit",
          "onboard",
          "track",
          "reward",
          "review"
        ],
        "description": "Ambassador program action"
      },
      "ambassadorId": {
        "type": "string",
        "description": "Ambassador user ID"
      },
      "applicationData": {
        "type": "object",
        "description": "New ambassador application data"
      },
      "activityData": {
        "type": "object",
        "description": "Activity to log"
      }
    },
    "required": [
      "action"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "ambassadorId": {
        "type": "string"
      },
      "status": {
        "type": "string"
      },
      "tier": {
        "type": "string"
      },
      "activityScore": {
        "type": "number"
      },
      "rewardsEarned": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    }
  },
  "metrics": {
    "primary": "ambassador_activity_rate",
    "benchmarks": {
      "excellent": "> 80%",
      "good": "60-80%",
      "needs_improvement": "< 60%"
    }
  },
  "temperature": 0.1,
  "tags": [
    "ambassador",
    "advocacy",
    "rewards",
    "program",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Ambassador Program Manager"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  }
}
