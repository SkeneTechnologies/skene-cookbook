{
  "id": "plg_feature_request_handler",
  "version": "1.0.0",
  "name": "Feature Request Handler",
  "description": "Captures, categorizes, and responds to feature requests while identifying existing solutions and setting appropriate expectations.",
  "domain": "plg",
  "tools": [
    {
      "name": "rag.query",
      "required": true
    },
    {
      "name": "analytics.track_event",
      "required": true
    },
    {
      "name": "lifecycle.get_segment",
      "required": false
    },
    {
      "name": "crm.update_contact",
      "required": false
    },
    {
      "name": "messaging.send_in_app",
      "required": false
    },
    {
      "name": "resend.send_template",
      "required": false
    },
    {
      "name": "lifecycle.record_moment",
      "required": false
    }
  ],
  "exitStates": [
    "support",
    "contextual_help",
    "activation",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "userId": {
        "type": "string",
        "description": "User submitting request"
      },
      "requestText": {
        "type": "string",
        "description": "The feature request content"
      },
      "requestSource": {
        "type": "string",
        "enum": [
          "in_app",
          "support",
          "feedback",
          "survey"
        ],
        "description": "Where request came from"
      }
    },
    "required": [
      "userId",
      "requestText"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "requestId": {
        "type": "string"
      },
      "category": {
        "type": "string"
      },
      "existingSolution": {
        "type": "boolean"
      },
      "roadmapStatus": {
        "type": "string"
      },
      "responseDelivered": {
        "type": "string"
      }
    }
  },
  "metrics": {
    "primary": "feature_request_resolution_rate",
    "benchmarks": {
      "excellent": "> 50%",
      "good": "30-50%",
      "needs_improvement": "< 30%"
    }
  },
  "temperature": 0.3,
  "tags": [
    "plg",
    "feedback",
    "feature-request",
    "support",
    "product",
    "verified"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Feature Request Handler"
      ]
    },
    "cursor": {},
    "skeneflow": {
      "tools": [
        {
          "name": "lifecycle.get_segment",
          "required": true
        },
        {
          "name": "lifecycle.record_moment",
          "required": false
        },
        {
          "name": "analytics.track_event",
          "required": false
        },
        {
          "name": "messaging.send_in_app",
          "required": false
        }
      ]
    }
  },
  "security_controls": {
    "execution_environment": {
      "type": "sandboxed_container",
      "resource_limits": {
        "cpu_cores": 1,
        "memory_mb": 512,
        "timeout_seconds": 30,
        "disk_mb": 100
      },
      "security": {
        "network_access": false,
        "filesystem": "read_only",
        "user": "non_root",
        "allowed_commands": [
          "node",
          "python3",
          "npm"
        ],
        "blocked_syscalls": [
          "exec",
          "fork",
          "kill"
        ]
      }
    }
  }
}