{
  "id": "plg_reverse_trial",
  "version": "1.0.0",
  "name": "Reverse Trial Orchestrator",
  "description": "Manages reverse trial experiences where users start with full premium access and gracefully transition to free tier, maximizing conversion through loss aversion.",
  "domain": "plg",
  "tools": [
    {
      "name": "lifecycle.get_segment",
      "required": true
    },
    {
      "name": "stripe.get_subscription",
      "required": true
    },
    {
      "name": "analytics.track_event",
      "required": true
    },
    {
      "name": "analytics.get_metrics",
      "required": true
    },
    {
      "name": "messaging.send_in_app",
      "required": false
    },
    {
      "name": "resend.send_template",
      "required": false
    },
    {
      "name": "lifecycle.record_moment",
      "required": false
    },
    {
      "name": "ui_kit.feature_gate",
      "required": false
    }
  ],
  "exitStates": [
    "monetization",
    "activation",
    "churn_prevention",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "userId": {
        "type": "string",
        "description": "User in reverse trial"
      },
      "trialDaysRemaining": {
        "type": "number",
        "description": "Days left in trial"
      },
      "action": {
        "type": "string",
        "enum": [
          "check_status",
          "extend_trial",
          "convert",
          "downgrade"
        ]
      }
    },
    "required": [
      "userId"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "trialStatus": {
        "type": "string"
      },
      "daysRemaining": {
        "type": "number"
      },
      "premiumFeaturesUsed": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "conversionProbability": {
        "type": "number"
      },
      "recommendedAction": {
        "type": "string"
      }
    }
  },
  "metrics": {
    "primary": "trial_to_paid_conversion",
    "benchmarks": {
      "excellent": "> 25%",
      "good": "15-25%",
      "needs_improvement": "< 15%"
    }
  },
  "temperature": 0,
  "tags": [
    "plg",
    "trial",
    "conversion",
    "monetization",
    "freemium",
    "verified"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Reverse Trial Orchestrator"
      ]
    },
    "cursor": {},
    "skeneflow": {
      "tools": [
        {
          "name": "lifecycle.get_segment",
          "required": true
        },
        {
          "name": "lifecycle.record_moment",
          "required": false
        },
        {
          "name": "analytics.track_event",
          "required": false
        },
        {
          "name": "messaging.send_in_app",
          "required": false
        }
      ]
    }
  }
}
