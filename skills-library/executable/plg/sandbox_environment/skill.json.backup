{
  "id": "plg_sandbox_environment",
  "version": "1.0.0",
  "name": "Sandbox Environment Provisioner",
  "description": "Provisions and manages isolated sandbox environments with sample data for safe product exploration without commitment.",
  "domain": "plg",
  "tools": [
    {
      "name": "supabase.create_project",
      "required": true
    },
    {
      "name": "supabase.seed_data",
      "required": true
    },
    {
      "name": "analytics.track_event",
      "required": true
    },
    {
      "name": "lifecycle.get_segment",
      "required": false
    },
    {
      "name": "lifecycle.record_moment",
      "required": false
    },
    {
      "name": "messaging.send_in_app",
      "required": false
    },
    {
      "name": "vercel.create_preview",
      "required": false
    }
  ],
  "exitStates": [
    "activation",
    "onboarding_flow",
    "time_to_value",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "userId": {
        "type": "string",
        "description": "User requesting sandbox"
      },
      "sandboxType": {
        "type": "string",
        "enum": [
          "basic",
          "industry",
          "custom"
        ],
        "description": "Type of sandbox to provision"
      },
      "industry": {
        "type": "string",
        "description": "Industry template for sample data"
      },
      "dataSize": {
        "type": "string",
        "enum": [
          "minimal",
          "realistic",
          "full"
        ],
        "description": "Amount of sample data"
      }
    },
    "required": [
      "userId"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "sandboxId": {
        "type": "string"
      },
      "sandboxUrl": {
        "type": "string"
      },
      "expiresAt": {
        "type": "string"
      },
      "sampleDataLoaded": {
        "type": "boolean"
      },
      "dataTemplateUsed": {
        "type": "string"
      }
    }
  },
  "metrics": {
    "primary": "sandbox_to_signup_conversion",
    "benchmarks": {
      "excellent": "> 40%",
      "good": "25-40%",
      "needs_improvement": "< 25%"
    }
  },
  "temperature": 0,
  "tags": [
    "plg",
    "sandbox",
    "trial",
    "demo",
    "onboarding",
    "verified"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Sandbox Environment Provisioner"
      ]
    },
    "cursor": {},
    "skeneflow": {
      "tools": [
        {
          "name": "lifecycle.get_segment",
          "required": true
        },
        {
          "name": "lifecycle.record_moment",
          "required": false
        },
        {
          "name": "analytics.track_event",
          "required": false
        },
        {
          "name": "messaging.send_in_app",
          "required": false
        }
      ]
    }
  }
}
