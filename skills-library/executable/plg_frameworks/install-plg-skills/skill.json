{
  "id": "plg_frameworks/install-plg-skills",
  "version": "1.0.0",
  "name": "install-plg-skills",
  "description": "Installs all 27 PLG skills from SkeneTechnologies/plg-skills repository. Clones the repository and copies all skills to the target location (personal or project). Use when the user wants to install PLG skills, add skills from the plg-skills repository, or set up Product-Led Growth skills for Cursor.",
  "domain": "plg_frameworks",
  "source": "external",
  "tools": [],
  "exitStates": [
    "success",
    "failure"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "installLocation": {
        "type": "string",
        "enum": [
          "personal",
          "project"
        ],
        "description": "Target installation location: 'personal' for ~/.cursor/skills/ or 'project' for .cursor/skills/"
      },
      "projectPath": {
        "type": "string",
        "description": "Absolute path to project directory (required if installLocation is 'project')",
        "format": "uri-reference"
      },
      "overwriteExisting": {
        "type": "boolean",
        "description": "Whether to overwrite existing skills if they already exist",
        "default": true
      },
      "skipCleanup": {
        "type": "boolean",
        "description": "Whether to skip cleanup of temporary clone directory (useful for debugging)",
        "default": false
      },
      "useSubmodule": {
        "type": "boolean",
        "description": "Whether to use git submodule instead of clone-and-copy (project only)",
        "default": false
      },
      "verifyInstallation": {
        "type": "boolean",
        "description": "Whether to verify installation by listing installed skills",
        "default": true
      }
    },
    "required": [
      "installLocation"
    ],
    "additionalProperties": false,
    "if": {
      "properties": {
        "installLocation": {
          "const": "project"
        }
      }
    },
    "then": {
      "required": [
        "installLocation",
        "projectPath"
      ]
    }
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "success": {
        "type": "boolean",
        "description": "Whether the installation completed successfully"
      },
      "installLocation": {
        "type": "string",
        "enum": [
          "personal",
          "project"
        ],
        "description": "Where the skills were installed"
      },
      "targetDirectory": {
        "type": "string",
        "description": "Full path to the directory where skills were installed",
        "format": "uri-reference"
      },
      "skillsInstalled": {
        "type": "integer",
        "description": "Number of skills successfully installed",
        "minimum": 0,
        "maximum": 27
      },
      "installedSkillsList": {
        "type": "array",
        "description": "List of skill directory names that were installed",
        "items": {
          "type": "string"
        },
        "maxItems": 27
      },
      "installationMethod": {
        "type": "string",
        "enum": [
          "clone-copy",
          "submodule"
        ],
        "description": "Method used for installation"
      },
      "tempDirectoryCleanedUp": {
        "type": "boolean",
        "description": "Whether the temporary clone directory was removed"
      },
      "errors": {
        "type": "array",
        "description": "List of errors encountered during installation",
        "items": {
          "type": "object",
          "properties": {
            "step": {
              "type": "string",
              "description": "Installation step where error occurred"
            },
            "message": {
              "type": "string",
              "description": "Error message"
            },
            "recoverable": {
              "type": "boolean",
              "description": "Whether the error is recoverable"
            }
          },
          "required": [
            "step",
            "message"
          ]
        }
      },
      "warnings": {
        "type": "array",
        "description": "Non-critical warnings during installation",
        "items": {
          "type": "string"
        }
      },
      "verificationOutput": {
        "type": "string",
        "description": "Output from verification step (ls command result)"
      },
      "nextSteps": {
        "type": "array",
        "description": "Recommended next steps for the user",
        "items": {
          "type": "string"
        }
      }
    },
    "required": [
      "success",
      "installLocation",
      "targetDirectory",
      "skillsInstalled",
      "installedSkillsList",
      "installationMethod",
      "tempDirectoryCleanedUp"
    ]
  },
  "temperature": 0,
  "tags": [
    "plg_frameworks",
    "imported",
    "verified"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with install plg skills",
        "growth framework",
        "the user wants to install plg skills, add skills from the plg-skills repository, or set up product-led growth skills for cursor"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  },
  "security_controls": {
    "delete_operations": {
      "soft_delete": true,
      "retention_period_days": 30,
      "undelete_capable": true,
      "backup_before_delete": true,
      "multi_party_approval": true,
      "confirmation_required": {
        "enabled": true,
        "show_impact": true,
        "require_reason": true
      }
    }
  },
  "metadata": {
    "schemaGenerated": true,
    "schemaConfidence": 0.92
  }
}
