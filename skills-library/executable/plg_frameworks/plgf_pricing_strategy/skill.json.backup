{
  "id": "plgf_pricing_strategy",
  "version": "1.0.0",
  "name": "Pricing Strategy",
  "description": "5 Ps framework (Phil Carter), value metrics, Good-Better-Best tiers, freemium design, and price research methods",
  "domain": "plg_frameworks",
  "tools": [
    {
      "name": "analytics.get_metrics",
      "required": true
    },
    {
      "name": "analytics.get_cohort",
      "required": false
    },
    {
      "name": "stripe.get_subscription_data",
      "required": false
    },
    {
      "name": "crm.get_customer_data",
      "required": false
    },
    {
      "name": "rag.query",
      "required": false
    },
    {
      "name": "ui_kit.panel",
      "required": false
    }
  ],
  "exitStates": [
    "pricing_recommended",
    "tiers_designed",
    "research_needed",
    "freemium_designed",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "productId": {
        "type": "string",
        "description": "Product to design pricing for"
      },
      "currentPricing": {
        "type": "object",
        "description": "Current pricing structure"
      },
      "targetSegments": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Target customer segments"
      },
      "competitorPricing": {
        "type": "array",
        "items": {
          "type": "object"
        },
        "description": "Competitor pricing data"
      },
      "valueMetricCandidates": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Potential value metrics"
      }
    },
    "required": [
      "productId"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "fivePsAnalysis": {
        "type": "object"
      },
      "valueMetricRecommendation": {
        "type": "object"
      },
      "tierDesign": {
        "type": "object"
      },
      "freemiumStrategy": {
        "type": "object"
      },
      "pricePoints": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "researchPlan": {
        "type": "object"
      },
      "projectedRevenue": {
        "type": "object"
      }
    }
  },
  "metrics": {
    "primary": "revenue_per_user",
    "benchmarks": {
      "excellent": "> $50 ARPU",
      "good": "$20-50 ARPU",
      "needs_improvement": "< $20 ARPU"
    }
  },
  "temperature": 0.3,
  "tags": [
    "plg_frameworks",
    "pricing",
    "monetization",
    "value_metrics",
    "phil_carter",
    "verified"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Pricing Strategy"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  }
}
