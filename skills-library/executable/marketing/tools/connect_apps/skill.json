{
  "id": "marketing_connect_apps",
  "version": "1.0.0",
  "name": "connect-apps",
  "description": "Connect Claude to external apps like Gmail, Slack, GitHub. Use this skill when the user wants to send emails, create issues, post messages, or take actions in external services.",
  "domain": "marketing",
  "category": "tools",
  "source": "skene-marketing",
  "tools": [],
  "exitStates": [
    "idle",
    "support"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {},
    "required": []
  },
  "outputSchema": {
    "type": "object",
    "properties": {}
  },
  "temperature": 0.3,
  "tags": [
    "marketing",
    "tools",
    "connect-apps",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with connect apps"
      ]
    },
    "cursor": {},
    "skeneflow": {
      "tools": [
        {
          "name": "resend.send_email",
          "required": false
        },
        {
          "name": "analytics.track_campaign",
          "required": false
        }
      ]
    }
  },
  "security_controls": {
    "execution_environment": {
      "type": "sandboxed_container",
      "resource_limits": {
        "cpu_cores": 1,
        "memory_mb": 512,
        "timeout_seconds": 30,
        "disk_mb": 100
      },
      "security": {
        "network_access": false,
        "filesystem": "read_only",
        "user": "non_root",
        "allowed_commands": [
          "node",
          "python3",
          "npm"
        ],
        "blocked_syscalls": [
          "exec",
          "fork",
          "kill"
        ]
      }
    }
  }
}