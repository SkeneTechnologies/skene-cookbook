{
  "id": "elg_marketplace_integration",
  "version": "1.0.0",
  "name": "Marketplace Integration Manager",
  "description": "Manages marketplace listings and tracks integration-driven growth.",
  "domain": "ecosystem",
  "tools": [
    {
      "name": "partner.get_marketplace_listing",
      "required": true
    },
    {
      "name": "partner.list_marketplaces",
      "required": true
    },
    {
      "name": "analytics.get_metrics",
      "required": false
    },
    {
      "name": "lifecycle.get_segment",
      "required": false
    }
  ],
  "exitStates": [
    "eql_scoring",
    "activation",
    "expansion_playbook",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "marketplaceId": {
        "type": "string",
        "description": "Marketplace identifier (e.g., 'salesforce_appexchange', 'hubspot_marketplace')"
      },
      "action": {
        "type": "string",
        "enum": ["list_integrations", "get_listing", "get_metrics", "update_listing"],
        "description": "Marketplace action"
      },
      "listingId": {
        "type": "string",
        "description": "Specific listing ID (optional, for get/update actions)"
      }
    },
    "required": ["action"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "listings": {
        "type": "array",
        "items": {"type": "object"}
      },
      "metrics": {
        "type": "object",
        "properties": {
          "installs": {"type": "number"},
          "revenue_influenced": {"type": "number"},
          "conversion_rate": {"type": "number"}
        }
      },
      "listing_status": {
        "type": "string",
        "enum": ["active", "pending", "inactive"]
      }
    }
  },
  "metrics": {
    "primary": "marketplace_influenced_revenue",
    "benchmarks": {
      "excellent": "> $100K/mo",
      "good": "$50-100K/mo",
      "needs_improvement": "< $50K/mo"
    }
  },
  "temperature": 0,
  "tags": [
    "ecosystem",
    "marketplace",
    "integration",
    "distribution",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Marketplace Integration Manager"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  },
  "security_controls": {
    "write_operations": {
      "preview_mode": true,
      "validation": {
        "input_schema": true,
        "business_rules": true,
        "data_integrity": true
      },
      "rollback": {
        "enabled": true,
        "window_seconds": 1800
      },
      "audit": {
        "log_before_state": true,
        "log_after_state": true,
        "track_user": true
      }
    }
  }
}