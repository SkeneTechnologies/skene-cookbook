{
  "id": "compliance_access_reviewer",
  "version": "1.0.0",
  "name": "Access Review Orchestrator",
  "description": "Orchestrates periodic user access reviews and certifications to ensure least-privilege access and compliance",
  "domain": "compliance",
  "tools": [
    {
      "name": "iam.get_access_report",
      "required": true
    },
    {
      "name": "iam.get_entitlements",
      "required": true
    },
    {
      "name": "iam.certify_access",
      "required": true
    },
    {
      "name": "iam.revoke_access",
      "required": true
    },
    {
      "name": "hr.get_employee_status",
      "required": true
    },
    {
      "name": "messaging.send_review_request",
      "required": false
    }
  ],
  "exitStates": [
    "soc2_tracker",
    "audit_preparer",
    "pii_detector",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": [
          "initiate_review",
          "get_status",
          "certify",
          "revoke",
          "report"
        ],
        "default": "get_status"
      },
      "reviewType": {
        "type": "string",
        "enum": [
          "quarterly",
          "privileged",
          "terminated",
          "application",
          "role"
        ],
        "default": "quarterly"
      },
      "scope": {
        "type": "string",
        "description": "Department, application, or user scope"
      },
      "reviewerId": {
        "type": "string",
        "description": "Manager conducting the review"
      }
    },
    "required": [
      "action"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "reviewId": {
        "type": "string"
      },
      "status": {
        "type": "string"
      },
      "usersReviewed": {
        "type": "number"
      },
      "accessCertified": {
        "type": "number"
      },
      "accessRevoked": {
        "type": "number"
      },
      "anomalies": {
        "type": "array"
      }
    }
  },
  "metrics": {
    "primary": "review_completion_rate",
    "benchmarks": {
      "excellent": "100%",
      "good": "> 95%",
      "needs_improvement": "< 95%"
    }
  },
  "temperature": 0,
  "tags": [
    "compliance",
    "access-review",
    "iam",
    "soc2",
    "least-privilege",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Access Review Orchestrator"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  }
}
