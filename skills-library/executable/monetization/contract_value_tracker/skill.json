{
  "id": "mon_contract_value_tracker",
  "version": "1.0.0",
  "name": "Contract Value Tracker",
  "description": "Tracks total contract value, recognized revenue, and remaining obligations",
  "domain": "monetization",
  "tools": [
    {
      "name": "stripe.get_subscription",
      "required": true
    },
    {
      "name": "stripe.list_invoices",
      "required": true
    },
    {
      "name": "crm.get_deal",
      "required": true
    },
    {
      "name": "analytics.get_metrics",
      "required": true
    },
    {
      "name": "crm.get_account",
      "required": false
    }
  ],
  "exitStates": [
    "contract_healthy",
    "renewal_approaching",
    "expansion_opportunity",
    "at_risk",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "account_id": {
        "type": "string",
        "description": "Account to track"
      },
      "contract_id": {
        "type": "string",
        "description": "Specific contract ID"
      },
      "include_expansion": {
        "type": "boolean",
        "default": true
      }
    },
    "required": [
      "account_id"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "total_contract_value": {
        "type": "number"
      },
      "recognized_revenue": {
        "type": "number"
      },
      "remaining_obligation": {
        "type": "number"
      },
      "months_remaining": {
        "type": "integer"
      },
      "expansion_revenue": {
        "type": "number"
      },
      "health_score": {
        "type": "number"
      }
    }
  },
  "metrics": {
    "primary": "contract_retention_rate",
    "benchmarks": {
      "excellent": "> 95%",
      "good": "85-95%",
      "needs_improvement": "< 85%"
    }
  },
  "temperature": 0,
  "tags": [
    "monetization",
    "contracts",
    "revenue",
    "renewals",
    "tracking",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Contract Value Tracker",
        "revenue optimization"
      ]
    },
    "cursor": {},
    "skeneflow": {
      "tools": [
        {
          "name": "stripe.get_customer",
          "required": true
        },
        {
          "name": "stripe.list_subscriptions",
          "required": false
        },
        {
          "name": "stripe.create_checkout",
          "required": false
        }
      ]
    }
  },
  "security_controls": {
    "payment_controls": {
      "preview_mode": true,
      "per_transaction_approval": true,
      "amount_limits": {
        "max_per_transaction": 50000,
        "daily_limit": 200000,
        "additional_approval_threshold": 25000
      },
      "rollback": {
        "enabled": true,
        "window_seconds": 3600
      },
      "two_phase_commit": true,
      "audit_logging": "detailed"
    }
  }
}