  "inputSchema": {
    "type": "object",
    "properties": {
      "analysis_period": {
        "type": "object",
        "properties": {
          "start_date": {
            "type": "string",
            "format": "date",
            "description": "Start date for pricing analysis period"
          },
          "end_date": {
            "type": "string",
            "format": "date",
            "description": "End date for pricing analysis period"
          }
        },
        "required": [
          "start_date",
          "end_date"
        ]
      },
      "pricing_plans": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "plan_id": {
              "type": "string",
              "description": "Unique identifier for the pricing plan"
            },
            "plan_name": {
              "type": "string",
              "description": "Display name of the pricing plan (e.g., Free, Pro, Enterprise)"
            },
            "list_price": {
              "type": "number",
              "minimum": 0,
              "description": "Published list price for the plan"
            },
            "billing_period": {
              "type": "string",
              "enum": [
                "monthly",
                "annual",
                "quarterly"
              ],
              "description": "Billing frequency for the plan"
            }
          },
          "required": [
            "plan_id",
            "plan_name"
          ]
        },
        "minItems": 1,
        "description": "List of pricing plans to analyze"
      },
      "metrics_to_analyze": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "arpu",
            "price_realization",
            "upgrade_rate",
            "discount_rate",
            "price_sensitivity",
            "ltv",
            "conversion_rate",
            "churn_rate"
          ]
        },
        "description": "Specific pricing metrics to focus on in the analysis",
        "default": [
          "arpu",
          "upgrade_rate",
          "discount_rate"
        ]
      },
      "cohort_segments": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Customer segments for cohort analysis (e.g., by signup date, industry, company size)",
        "default": [
          "signup_month"
        ]
      },
      "competitive_benchmarks": {
        "type": "object",
        "properties": {
          "include_comparison": {
            "type": "boolean",
            "description": "Whether to include competitive pricing comparison",
            "default": false
          },
          "competitor_data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "competitor_name": {
                  "type": "string"
                },
                "plan_tier": {
                  "type": "string"
                },
                "price": {
                  "type": "number",
                  "minimum": 0
                }
              }
            }
          }
        }
      },
      "optimization_goals": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "maximize_revenue",
            "maximize_conversions",
            "reduce_churn",
            "improve_upgrade_rate",
            "optimize_discounting"
          ]
        },
        "description": "Primary goals for pricing optimization",
        "default": [
          "maximize_revenue"
        ]
      },
      "constraints": {
        "type": "object",
        "properties": {
          "max_price_increase_percent": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Maximum allowable price increase percentage"
          },
          "max_churn_tolerance_percent": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Maximum acceptable churn rate increase"
          },
          "grandfather_existing_customers": {
            "type": "boolean",
            "description": "Whether to maintain current pricing for existing customers",
            "default": true
          }
        }
      }
    },
    "required": [
      "analysis_period",
      "pricing_plans"
