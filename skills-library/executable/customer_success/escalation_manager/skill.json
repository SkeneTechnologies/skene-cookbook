{
  "id": "cs_escalation_manager",
  "version": "1.0.0",
  "name": "Escalation Manager",
  "description": "Manages customer escalations through structured workflows, ensuring timely resolution and stakeholder communication.",
  "domain": "customer_success",
  "tools": [
    {
      "name": "crm.get_account",
      "required": true
    },
    {
      "name": "crm.get_interactions",
      "required": true
    },
    {
      "name": "crm.create_task",
      "required": true
    },
    {
      "name": "messaging.send_alert",
      "required": true
    },
    {
      "name": "feedback.get_surveys",
      "required": false
    },
    {
      "name": "messaging.send_email",
      "required": false
    }
  ],
  "exitStates": [
    "risk_mitigation_playbook",
    "health_scoring",
    "executive_alignment",
    "success_plan_generator",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "accountId": {
        "type": "string",
        "description": "Customer account identifier"
      },
      "escalationType": {
        "type": "string",
        "enum": [
          "technical",
          "commercial",
          "relationship",
          "executive",
          "legal"
        ]
      },
      "severity": {
        "type": "string",
        "enum": [
          "critical",
          "high",
          "medium",
          "low"
        ]
      },
      "description": {
        "type": "string",
        "description": "Description of the escalation"
      }
    },
    "required": [
      "accountId",
      "escalationType",
      "severity"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "escalationId": {
        "type": "string"
      },
      "status": {
        "type": "string"
      },
      "assignedTo": {
        "type": "array"
      },
      "resolutionPlan": {
        "type": "array"
      },
      "slaDeadline": {
        "type": "string"
      },
      "communications": {
        "type": "array"
      }
    }
  },
  "metrics": {
    "primary": "escalation_resolution_time",
    "benchmarks": {
      "excellent": "< 24 hours",
      "good": "24-72 hours",
      "needs_improvement": "> 72 hours"
    }
  },
  "temperature": 0,
  "tags": [
    "customer_success",
    "escalation",
    "resolution",
    "support",
    "crisis",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Escalation Manager",
        "customer health"
      ]
    },
    "cursor": {},
    "skeneflow": {
      "tools": [
        {
          "name": "lifecycle.get_segment",
          "required": true
        },
        {
          "name": "analytics.get_cohort",
          "required": false
        },
        {
          "name": "crm.update_account",
          "required": false
        }
      ]
    }
  },
  "security_controls": {
    "execution_environment": {
      "type": "sandboxed_container",
      "resource_limits": {
        "cpu_cores": 1,
        "memory_mb": 512,
        "timeout_seconds": 30,
        "disk_mb": 100
      },
      "security": {
        "network_access": false,
        "filesystem": "read_only",
        "user": "non_root",
        "allowed_commands": [
          "node",
          "python3",
          "npm"
        ],
        "blocked_syscalls": [
          "exec",
          "fork",
          "kill"
        ]
      }
    }
  }
}