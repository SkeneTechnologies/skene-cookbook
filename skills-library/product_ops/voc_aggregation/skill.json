  "domain": "product_ops",
  "tools": [
    {
      "name": "feedback.list",
      "required": true
    },
    {
      "name": "feedback.get_survey",
      "required": true
    },
    {
      "name": "feedback.sentiment",
      "required": true
    },
    {
