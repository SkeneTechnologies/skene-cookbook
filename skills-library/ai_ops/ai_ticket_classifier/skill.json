{
  "id": "ai_ticket_classifier",
  "version": "1.0.0",
  "name": "Support Ticket Classifier",
  "description": "Automatically classifies, prioritizes, and routes support tickets using AI analysis.",
  "domain": "ai_ops",
  "tools": [
    {
      "name": "ai.classify",
      "required": true
    },
    {
      "name": "ai.extract_entities",
      "required": true
    },
    {
      "name": "support.assign_ticket",
      "required": true
    },
    {
      "name": "support.set_priority",
      "required": true
    },
    {
      "name": "crm.get_customer",
      "required": false
    },
    {
      "name": "analytics.track_ticket",
      "required": false
    }
  ],
  "exitStates": [
    "routed",
    "escalated",
    "auto_resolved",
    "needs_info",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "ticket_id": {
        "type": "string"
      },
      "subject": {
        "type": "string"
      },
      "body": {
        "type": "string"
      },
      "customer_id": {
        "type": "string"
      },
      "channel": {
        "type": "string",
        "enum": [
          "email",
          "chat",
          "phone",
          "form"
        ]
      },
      "attachments": {
        "type": "array"
      }
    },
    "required": [
      "subject",
      "body"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "category": {
        "type": "string"
      },
      "subcategory": {
        "type": "string"
      },
      "priority": {
        "type": "string",
        "enum": [
          "critical",
          "high",
          "medium",
          "low"
        ]
      },
      "assigned_to": {
        "type": "string"
      },
      "sentiment": {
        "type": "string"
      },
      "suggested_response": {
        "type": "string"
      },
      "auto_resolve_eligible": {
        "type": "boolean"
      }
    }
  },
  "metrics": {
    "primary": "classification_accuracy",
    "benchmarks": {
      "excellent": "> 95%",
      "good": "85-95%",
      "needs_improvement": "< 85%"
    }
  },
  "temperature": 0,
  "tags": [
    "ai_ops",
    "support",
    "ticket",
    "classification",
    "routing",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Support Ticket Classifier"
      ]
    },
    "cursor": {},
    "skeneflow": {
      "tools": [
        {
          "name": "ai.classify",
          "required": false
        },
        {
          "name": "ai.generate",
          "required": false
        },
        {
          "name": "ai.score_lead",
          "required": false
        }
      ]
    }
  },
  "security_controls": {
    "payment_controls": {
      "preview_mode": true,
      "per_transaction_approval": true,
      "amount_limits": {
        "max_per_transaction": 50000,
        "daily_limit": 200000,
        "additional_approval_threshold": 25000
      },
      "rollback": {
        "enabled": true,
        "window_seconds": 3600
      },
      "two_phase_commit": true,
      "audit_logging": "detailed"
    }
  }
}