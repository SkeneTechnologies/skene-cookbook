{
  "id": "community_case_study_finder",
  "version": "1.0.0",
  "name": "Case Study Candidate Finder",
  "description": "Identifies and qualifies community members as potential case study candidates based on success signals and story potential.",
  "domain": "community",
  "tools": [
    {
      "name": "analytics.get_usage",
      "required": true
    },
    {
      "name": "crm.get_contact",
      "required": true
    },
    {
      "name": "ai.score",
      "required": true
    },
    {
      "name": "messaging.send_email",
      "required": false
    },
    {
      "name": "analytics.track_event",
      "required": true
    }
  ],
  "exitStates": [
    "content_curator",
    "champion_identifier",
    "ugc_curator",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": [
          "discover",
          "qualify",
          "outreach",
          "track"
        ],
        "description": "Case study action"
      },
      "userId": {
        "type": "string",
        "description": "User to evaluate"
      },
      "criteria": {
        "type": "object",
        "description": "Custom qualification criteria"
      },
      "industry": {
        "type": "string",
        "description": "Target industry for case study"
      },
      "useCase": {
        "type": "string",
        "description": "Target use case"
      }
    },
    "required": [
      "action"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "candidates": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "qualificationScore": {
        "type": "number"
      },
      "storyAngle": {
        "type": "string"
      },
      "outreachSent": {
        "type": "boolean"
      }
    }
  },
  "metrics": {
    "primary": "case_study_conversion_rate",
    "benchmarks": {
      "excellent": "> 30%",
      "good": "20-30%",
      "needs_improvement": "< 20%"
    }
  },
  "temperature": 0.2,
  "tags": [
    "case-study",
    "marketing",
    "success-stories",
    "advocacy",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Case Study Candidate Finder"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  }
}
