{
  "id": "community_ugc_curator",
  "version": "1.0.0",
  "name": "User-Generated Content Curator",
  "description": "Discovers, curates, and amplifies user-generated content including social posts, reviews, and testimonials.",
  "domain": "community",
  "tools": [
    {
      "name": "social.search",
      "required": true
    },
    {
      "name": "ai.classify",
      "required": true
    },
    {
      "name": "ai.moderate",
      "required": true
    },
    {
      "name": "messaging.send_notification",
      "required": false
    },
    {
      "name": "analytics.track_event",
      "required": true
    },
    {
      "name": "crm.update_contact",
      "required": false
    }
  ],
  "exitStates": [
    "content_curator",
    "champion_identifier",
    "case_study_finder",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": [
          "discover",
          "curate",
          "amplify",
          "request",
          "report"
        ],
        "description": "UGC action"
      },
      "contentType": {
        "type": "string",
        "enum": [
          "social",
          "review",
          "testimonial",
          "video",
          "blog"
        ],
        "description": "Type of UGC"
      },
      "platforms": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Platforms to search"
      },
      "timeRange": {
        "type": "string",
        "enum": [
          "24h",
          "7d",
          "30d"
        ],
        "description": "Search time range"
      }
    },
    "required": [
      "action"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "ugcItems": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "topContent": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "sentimentBreakdown": {
        "type": "object"
      },
      "amplificationActions": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    }
  },
  "metrics": {
    "primary": "ugc_amplification_reach",
    "benchmarks": {
      "excellent": "> 50k",
      "good": "20-50k",
      "needs_improvement": "< 20k"
    }
  },
  "temperature": 0.2,
  "tags": [
    "ugc",
    "social",
    "testimonials",
    "reviews",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with User Generated Content Curator"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  },
  "security_controls": {
    "data_access": {
      "field_level_control": true,
      "allowed_fields": [
        "id",
        "name",
        "email",
        "created_at"
      ],
      "tenant_isolation": true,
      "time_window_days": 90,
      "read_only": false,
      "pii_redaction": true
    }
  }
}