{
  "id": "cursor_rules/aws-ecs",
  "version": "1.0.0",
  "name": "aws-ecs",
  "description": "Definitive guidelines for building, deploying, and operating applications on AWS ECS, emphasizing immutable containers, secure secrets management, and robust operational patterns.",
  "domain": "cursor_rules",
  "source": "external",
  "tools": [],
  "exitStates": [
    "success",
    "failure"
  ],
  "inputSchema": {},
  "outputSchema": {},
  "temperature": 0,
  "tags": [
    "cursor_rules",
    "imported",
    "verified"
  ],
  "platforms": {
    "cursor": {
      "globs": [
        "**/*"
      ]
    },
    "claude": {
      "triggers": [
        "help with aws ecs"
      ]
    },
    "skeneflow": {}
  },
  "security_controls": {
    "authentication": {
      "method": "oauth",
      "provider": "managed_identity",
      "scopes": [
        "read:data",
        "write:data"
      ],
      "token_lifetime": 3600
    }
  }
}