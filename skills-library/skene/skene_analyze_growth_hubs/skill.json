{
  "id": "skene_analyze_growth_hubs",
  "version": "1.0.0",
  "name": "Growth Hubs Analyzer",
  "description": "Identifies viral, engagement, and monetization features in code by scanning for growth-related patterns and integrations",
  "domain": "skene",
  "tools": [
    {
      "name": "fs.scan",
      "required": true
    },
    {
      "name": "fs.read",
      "required": true
    },
    {
      "name": "fs.glob",
      "required": true
    },
    {
      "name": "fs.grep",
      "required": true
    },
    {
      "name": "ai.classify",
      "required": true
    },
    {
      "name": "ai.extract",
      "required": true
    }
  ],
  "exitStates": [
    "analyze_product_overview",
    "analyze_features",
    "generate_growth_manifest",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "rootPath": {
        "type": "string",
        "description": "Root path of the codebase to analyze"
      },
      "techStack": {
        "type": "object",
        "description": "Tech stack from previous analysis"
      },
      "focusAreas": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "viral",
            "engagement",
            "monetization",
            "retention",
            "acquisition"
          ]
        },
        "description": "Specific growth areas to focus on"
      }
    },
    "required": [
      "rootPath"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "viralFeatures": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "viralCoefficient": {
              "type": "string"
            }
          }
        }
      },
      "engagementFeatures": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "habitLoop": {
              "type": "string"
            }
          }
        }
      },
      "monetizationFeatures": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "model": {
              "type": "string"
            },
            "integration": {
              "type": "string"
            }
          }
        }
      },
      "growthGaps": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "category": {
              "type": "string"
            },
            "gap": {
              "type": "string"
            },
            "recommendation": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "metrics": {
    "primary": "growth_coverage_score",
    "secondary": [
      "viral_potential",
      "monetization_readiness",
      "engagement_depth"
    ],
    "benchmarks": {
      "excellent": "> 80%",
      "good": "60-80%",
      "needs_improvement": "< 60%"
    }
  },
  "temperature": 0.1,
  "tags": [
    "skene",
    "analysis",
    "growth",
    "viral",
    "monetization",
    "engagement",
    "experimental"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Growth Hubs Analyzer"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  }
}
