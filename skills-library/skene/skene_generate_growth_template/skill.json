{
  "id": "skene_generate_growth_template",
  "version": "1.0.0",
  "name": "Growth Template Generator",
  "description": "Generates PLG growth strategies and playbooks based on analysis, providing customized templates for activation, monetization, and viral growth",
  "domain": "skene",
  "tools": [
    {
      "name": "fs.write",
      "required": true
    },
    {
      "name": "ai.generate",
      "required": true
    },
    {
      "name": "ai.customize",
      "required": true
    }
  ],
  "exitStates": [
    "idle",
    "analyze_tech_stack"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "rootPath": {
        "type": "string",
        "description": "Root path of the codebase"
      },
      "manifest": {
        "type": "object",
        "description": "Growth manifest from previous skill"
      },
      "focusAreas": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "activation",
            "monetization",
            "viral",
            "retention",
            "acquisition"
          ]
        },
        "description": "Specific areas to focus template generation on"
      },
      "outputFormat": {
        "type": "string",
        "enum": [
          "markdown",
          "json",
          "notion",
          "linear"
        ],
        "description": "Output format for templates",
        "default": "markdown"
      },
      "outputPath": {
        "type": "string",
        "description": "Path for generated templates",
        "default": "growth-playbook/"
      }
    },
    "required": [
      "rootPath",
      "manifest"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "playbooks": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "category": {
              "type": "string"
            },
            "strategy": {
              "type": "string"
            },
            "tactics": {
              "type": "array"
            },
            "metrics": {
              "type": "array"
            },
            "templates": {
              "type": "array"
            }
          }
        }
      },
      "implementationGuides": {
        "type": "array"
      },
      "experimentTemplates": {
        "type": "array"
      }
    }
  },
  "metrics": {
    "primary": "template_actionability",
    "secondary": [
      "customization_relevance",
      "implementation_clarity"
    ],
    "benchmarks": {
      "excellent": "> 90%",
      "good": "75-90%",
      "needs_improvement": "< 75%"
    }
  },
  "temperature": 0.3,
  "tags": [
    "skene",
    "generation",
    "growth",
    "playbook",
    "strategy",
    "templates",
    "experimental"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Growth Template Generator"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  }
}
