{
  "id": "skene_analyze_tech_stack",
  "version": "1.0.0",
  "name": "Tech Stack Analyzer",
  "description": "Detects technology stack including framework, language, database, and services by scanning package files, configuration, and source code patterns",
  "domain": "skene",
  "tools": [
    {
      "name": "fs.scan",
      "required": true
    },
    {
      "name": "fs.read",
      "required": true
    },
    {
      "name": "fs.glob",
      "required": true
    },
    {
      "name": "ai.classify",
      "required": true
    }
  ],
  "exitStates": [
    "analyze_growth_hubs",
    "analyze_features",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "rootPath": {
        "type": "string",
        "description": "Root path of the codebase to analyze"
      },
      "depth": {
        "type": "number",
        "description": "Scan depth for directory traversal",
        "default": 3
      },
      "includeDevDeps": {
        "type": "boolean",
        "description": "Include development dependencies in analysis",
        "default": true
      }
    },
    "required": [
      "rootPath"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "language": {
        "type": "object",
        "properties": {
          "primary": {
            "type": "string"
          },
          "secondary": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "versions": {
            "type": "object"
          }
        }
      },
      "framework": {
        "type": "object",
        "properties": {
          "frontend": {
            "type": "string"
          },
          "backend": {
            "type": "string"
          },
          "meta": {
            "type": "string"
          }
        }
      },
      "database": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "orm": {
              "type": "string"
            }
          }
        }
      },
      "services": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "category": {
              "type": "string"
            },
            "purpose": {
              "type": "string"
            }
          }
        }
      },
      "infrastructure": {
        "type": "object",
        "properties": {
          "hosting": {
            "type": "string"
          },
          "containerization": {
            "type": "string"
          },
          "ci_cd": {
            "type": "string"
          }
        }
      },
      "confidence": {
        "type": "number"
      }
    }
  },
  "metrics": {
    "primary": "detection_accuracy",
    "secondary": [
      "coverage_completeness",
      "false_positive_rate"
    ],
    "benchmarks": {
      "excellent": "> 95%",
      "good": "85-95%",
      "needs_improvement": "< 85%"
    }
  },
  "temperature": 0,
  "tags": [
    "skene",
    "analysis",
    "tech-stack",
    "detection",
    "codebase",
    "experimental"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Tech Stack Analyzer"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  }
}
