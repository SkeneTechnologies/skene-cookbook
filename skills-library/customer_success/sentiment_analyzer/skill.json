{
  "id": "cs_sentiment_analyzer",
  "version": "1.0.0",
  "name": "Customer Sentiment Analyzer",
  "description": "Analyzes customer sentiment across all touchpoints to identify satisfaction trends, detect early warning signs, and guide proactive engagement.",
  "domain": "customer_success",
  "tools": [
    {
      "name": "feedback.get_surveys",
      "required": true
    },
    {
      "name": "crm.get_interactions",
      "required": true
    },
    {
      "name": "analytics.query_events",
      "required": true
    },
    {
      "name": "ai.analyze_sentiment",
      "required": true
    },
    {
      "name": "messaging.send_alert",
      "required": false
    },
    {
      "name": "crm.update_account",
      "required": false
    }
  ],
  "exitStates": [
    "health_scoring",
    "escalation_manager",
    "risk_mitigation_playbook",
    "nps_followup",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "accountId": {
        "type": "string",
        "description": "Customer account identifier"
      },
      "timeframe": {
        "type": "string",
        "enum": [
          "7d",
          "30d",
          "90d",
          "ytd"
        ]
      },
      "channels": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "support",
            "email",
            "calls",
            "surveys",
            "social",
            "product"
          ]
        }
      }
    },
    "required": [
      "accountId"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "overallSentiment": {
        "type": "string",
        "enum": [
          "positive",
          "neutral",
          "negative",
          "mixed"
        ]
      },
      "sentimentScore": {
        "type": "number",
        "minimum": -100,
        "maximum": 100
      },
      "trend": {
        "type": "string",
        "enum": [
          "improving",
          "stable",
          "declining"
        ]
      },
      "channelBreakdown": {
        "type": "object"
      },
      "keyThemes": {
        "type": "array"
      },
      "alerts": {
        "type": "array"
      }
    }
  },
  "metrics": {
    "primary": "sentiment_accuracy",
    "benchmarks": {
      "excellent": "> 90%",
      "good": "80-90%",
      "needs_improvement": "< 80%"
    }
  },
  "temperature": 0,
  "tags": [
    "customer_success",
    "sentiment",
    "feedback",
    "nps",
    "satisfaction",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Customer Sentiment Analyzer",
        "customer health"
      ]
    },
    "cursor": {},
    "skeneflow": {
      "tools": [
        {
          "name": "lifecycle.get_segment",
          "required": true
        },
        {
          "name": "analytics.get_cohort",
          "required": false
        },
        {
          "name": "crm.update_account",
          "required": false
        }
      ]
    }
  },
  "security_controls": {
    "write_operations": {
      "preview_mode": true,
      "validation": {
        "input_schema": true,
        "business_rules": true,
        "data_integrity": true
      },
      "rollback": {
        "enabled": true,
        "window_seconds": 1800
      },
      "audit": {
        "log_before_state": true,
        "log_after_state": true,
        "track_user": true
      }
    }
  }
}