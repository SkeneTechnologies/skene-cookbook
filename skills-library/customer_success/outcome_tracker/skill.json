{
  "id": "cs_outcome_tracker",
  "version": "1.0.0",
  "name": "Business Outcome Tracker",
  "description": "Tracks and reports on customer business outcomes, demonstrating ROI and value delivered through product usage.",
  "domain": "customer_success",
  "tools": [
    {
      "name": "crm.get_goals",
      "required": true
    },
    {
      "name": "analytics.get_metrics",
      "required": true
    },
    {
      "name": "crm.get_account",
      "required": true
    },
    {
      "name": "analytics.query_events",
      "required": false
    },
    {
      "name": "crm.update_account",
      "required": false
    },
    {
      "name": "messaging.send_email",
      "required": false
    }
  ],
  "exitStates": [
    "vla_tracker",
    "quarterly_business_review",
    "expansion_playbook",
    "value_realization",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "accountId": {
        "type": "string",
        "description": "Customer account identifier"
      },
      "outcomeCategories": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "revenue",
            "efficiency",
            "risk",
            "experience",
            "innovation"
          ]
        }
      },
      "reportingPeriod": {
        "type": "string",
        "enum": [
          "monthly",
          "quarterly",
          "yearly",
          "custom"
        ]
      }
    },
    "required": [
      "accountId"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "outcomes": {
        "type": "array"
      },
      "totalROI": {
        "type": "object"
      },
      "valueDelivered": {
        "type": "number"
      },
      "outcomeProgress": {
        "type": "array"
      },
      "valueStory": {
        "type": "string"
      }
    }
  },
  "metrics": {
    "primary": "outcome_achievement_rate",
    "benchmarks": {
      "excellent": "> 85%",
      "good": "70-85%",
      "needs_improvement": "< 70%"
    }
  },
  "temperature": 0,
  "tags": [
    "customer_success",
    "outcomes",
    "roi",
    "value",
    "business_impact",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Business Outcome Tracker",
        "customer health"
      ]
    },
    "cursor": {},
    "skeneflow": {
      "tools": [
        {
          "name": "lifecycle.get_segment",
          "required": true
        },
        {
          "name": "analytics.get_cohort",
          "required": false
        },
        {
          "name": "crm.update_account",
          "required": false
        }
      ]
    }
  },
  "security_controls": {
    "write_operations": {
      "preview_mode": true,
      "validation": {
        "input_schema": true,
        "business_rules": true,
        "data_integrity": true
      },
      "rollback": {
        "enabled": true,
        "window_seconds": 1800
      },
      "audit": {
        "log_before_state": true,
        "log_after_state": true,
        "track_user": true
      }
    }
  }
}