{
  "id": "compliance_data_retention",
  "version": "1.0.0",
  "name": "Data Retention Manager",
  "description": "Manages data retention policies and automated data lifecycle enforcement across all systems",
  "domain": "compliance",
  "tools": [
    {
      "name": "data.get_inventory",
      "required": true
    },
    {
      "name": "data.apply_retention",
      "required": true
    },
    {
      "name": "data.archive",
      "required": true
    },
    {
      "name": "data.delete",
      "required": true
    },
    {
      "name": "legal.check_holds",
      "required": true
    },
    {
      "name": "audit.log_deletion",
      "required": true
    },
    {
      "name": "messaging.send_report",
      "required": false
    }
  ],
  "exitStates": [
    "gdpr_manager",
    "audit_preparer",
    "pii_detector",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": [
          "audit",
          "enforce",
          "report",
          "configure"
        ],
        "default": "audit"
      },
      "dataCategory": {
        "type": "string",
        "enum": [
          "all",
          "personal",
          "financial",
          "logs",
          "communications",
          "backups"
        ]
      },
      "dryRun": {
        "type": "boolean",
        "default": true,
        "description": "Preview actions without executing"
      },
      "scope": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Systems to include"
      }
    },
    "required": [
      "action"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "dataInventory": {
        "type": "array"
      },
      "retentionStatus": {
        "type": "object"
      },
      "expiredData": {
        "type": "array"
      },
      "actionsExecuted": {
        "type": "array"
      },
      "legalHolds": {
        "type": "array"
      },
      "storageRecovered": {
        "type": "number"
      }
    }
  },
  "metrics": {
    "primary": "retention_compliance",
    "benchmarks": {
      "excellent": "100%",
      "good": "> 95%",
      "needs_improvement": "< 95%"
    }
  },
  "temperature": 0,
  "tags": [
    "compliance",
    "data-retention",
    "lifecycle",
    "storage",
    "gdpr",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Data Retention Manager"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  }
}
