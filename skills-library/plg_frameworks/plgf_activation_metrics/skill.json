{
  "id": "plgf_activation_metrics",
  "version": "1.0.0",
  "name": "Activation Metrics",
  "description": "Setup/Aha/Habit moments framework (Shaun Clowes), aha moment identification, and time-to-value optimization",
  "domain": "plg_frameworks",
  "tools": [
    {
      "name": "analytics.get_metrics",
      "required": true
    },
    {
      "name": "analytics.get_cohort",
      "required": true
    },
    {
      "name": "analytics.get_funnel",
      "required": true
    },
    {
      "name": "analytics.track_event",
      "required": false
    },
    {
      "name": "ui_kit.chart",
      "required": false
    },
    {
      "name": "ui_kit.panel",
      "required": false
    }
  ],
  "exitStates": [
    "aha_identified",
    "habit_formed",
    "needs_optimization",
    "churn_risk",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "productId": {
        "type": "string",
        "description": "Product to analyze activation for"
      },
      "cohortPeriod": {
        "type": "string",
        "description": "Cohort period to analyze (e.g., '7d', '30d')"
      },
      "currentActivationMetric": {
        "type": "string",
        "description": "Current activation event definition"
      },
      "targetTimeToValue": {
        "type": "number",
        "description": "Target time to value in hours"
      }
    },
    "required": [
      "productId"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "setupMoment": {
        "type": "object"
      },
      "ahaMoment": {
        "type": "object"
      },
      "habitMoment": {
        "type": "object"
      },
      "timeToValue": {
        "type": "object"
      },
      "activationFunnel": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "correlationAnalysis": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "recommendations": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    }
  },
  "metrics": {
    "primary": "activation_rate",
    "benchmarks": {
      "excellent": "> 40%",
      "good": "25-40%",
      "needs_improvement": "< 25%"
    }
  },
  "temperature": 0.3,
  "tags": [
    "plg_frameworks",
    "activation",
    "aha_moment",
    "time_to_value",
    "shaun_clowes",
    "verified"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Activation Metrics"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  }
}
