{
  "id": "plgf_feature_gating",
  "version": "1.0.0",
  "name": "Feature Gating",
  "description": "Gate types (hard/soft/usage/time/team), reverse trials (Elena Verna), and competitive free tier analysis",
  "domain": "plg_frameworks",
  "tools": [
    {
      "name": "analytics.get_metrics",
      "required": true
    },
    {
      "name": "analytics.get_funnel",
      "required": true
    },
    {
      "name": "stripe.get_subscription_data",
      "required": false
    },
    {
      "name": "lifecycle.get_segment",
      "required": false
    },
    {
      "name": "ui_kit.paywall",
      "required": false
    },
    {
      "name": "ui_kit.panel",
      "required": false
    }
  ],
  "exitStates": [
    "gates_designed",
    "reverse_trial_implemented",
    "gates_optimized",
    "competitive_analysis_complete",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "productId": {
        "type": "string",
        "description": "Product to design gates for"
      },
      "features": {
        "type": "array",
        "items": {
          "type": "object"
        },
        "description": "Features to evaluate for gating"
      },
      "currentGates": {
        "type": "array",
        "items": {
          "type": "object"
        },
        "description": "Current gate configuration"
      },
      "competitorFreeTiers": {
        "type": "array",
        "items": {
          "type": "object"
        },
        "description": "Competitor free tier analysis"
      }
    },
    "required": [
      "productId"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "gateRecommendations": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "gateTypeAnalysis": {
        "type": "object"
      },
      "reverseTrialDesign": {
        "type": "object"
      },
      "freeTierComparison": {
        "type": "object"
      },
      "conversionImpact": {
        "type": "object"
      },
      "implementationPlan": {
        "type": "array",
        "items": {
          "type": "object"
        }
      }
    }
  },
  "metrics": {
    "primary": "gate_conversion_rate",
    "benchmarks": {
      "excellent": "> 15%",
      "good": "8-15%",
      "needs_improvement": "< 8%"
    }
  },
  "temperature": 0.3,
  "tags": [
    "plg_frameworks",
    "feature_gating",
    "monetization",
    "reverse_trial",
    "elena_verna",
    "verified"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Feature Gating",
        "trial optimization"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  },
  "security_controls": {
    "delete_operations": {
      "soft_delete": true,
      "retention_period_days": 30,
      "undelete_capable": true,
      "backup_before_delete": true,
      "multi_party_approval": true,
      "confirmation_required": {
        "enabled": true,
        "show_impact": true,
        "require_reason": true
      }
    }
  }
}