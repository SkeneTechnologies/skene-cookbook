{
  "id": "devex_code_sample_generator",
  "version": "1.0.0",
  "name": "Code Sample Generator",
  "description": "Generates working code samples for API endpoints in multiple languages with best practices and error handling.",
  "domain": "devex",
  "tools": [
    {
      "name": "ai.generate_code",
      "required": true
    },
    {
      "name": "docs.get_endpoint",
      "required": true
    },
    {
      "name": "code.validate",
      "required": false
    },
    {
      "name": "code.execute_sandbox",
      "required": false
    }
  ],
  "exitStates": [
    "api_onboarding",
    "error_explainer",
    "webhook_tester",
    "idle"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "endpoint": {
        "type": "string",
        "description": "API endpoint to generate code for"
      },
      "language": {
        "type": "string",
        "description": "Target programming language"
      },
      "use_case": {
        "type": "string",
        "description": "Specific use case context"
      },
      "include_error_handling": {
        "type": "boolean",
        "default": true
      },
      "style": {
        "type": "string",
        "enum": [
          "minimal",
          "standard",
          "comprehensive"
        ],
        "default": "standard"
      }
    },
    "required": [
      "endpoint",
      "language"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "code_sample": {
        "type": "string"
      },
      "dependencies": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "explanation": {
        "type": "string"
      },
      "variations": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "test_command": {
        "type": "string"
      }
    }
  },
  "metrics": {
    "primary": "code_sample_copy_rate",
    "benchmarks": {
      "excellent": "> 70% samples copied",
      "good": "50-70% samples copied",
      "needs_improvement": "< 50% samples copied"
    }
  },
  "temperature": 0.3,
  "tags": [
    "devex",
    "code-generation",
    "documentation",
    "examples",
    "sdk",
    "community"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Code Sample Generator"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  },
  "security_controls": {
    "authentication": {
      "method": "oauth",
      "provider": "managed_identity",
      "scopes": [
        "read:data",
        "write:data"
      ],
      "token_lifetime": 3600
    }
  }
}