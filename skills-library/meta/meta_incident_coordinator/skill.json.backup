{
  "id": "meta_incident_coordinator",
  "version": "1.0.0",
  "name": "Cross-Functional Incident Coordinator",
  "description": "Coordinates incident response across Support, Product, Engineering, and Customer Success for rapid resolution and clear communication",
  "domain": "meta",
  "tools": [
    {
      "name": "support.get_incident",
      "required": true
    },
    {
      "name": "support.get_affected_customers",
      "required": true
    },
    {
      "name": "support.update_incident_status",
      "required": true
    },
    {
      "name": "product.get_feature_status",
      "required": true
    },
    {
      "name": "product.get_error_logs",
      "required": true
    },
    {
      "name": "engineering.get_service_health",
      "required": true
    },
    {
      "name": "engineering.get_deployment_history",
      "required": true
    },
    {
      "name": "cs.get_strategic_accounts_affected",
      "required": true
    },
    {
      "name": "messaging.send_notification",
      "required": true
    },
    {
      "name": "ai.assess_severity",
      "required": true
    },
    {
      "name": "ai.generate_comms",
      "required": true
    }
  ],
  "exitStates": [
    "investigating",
    "mitigating",
    "monitoring",
    "resolved",
    "post_mortem_scheduled",
    "escalated_externally"
  ],
  "inputSchema": {
    "type": "object",
    "properties": {
      "incidentId": {
        "type": "string",
        "description": "Incident identifier"
      },
      "severity": {
        "type": "string",
        "enum": [
          "sev1",
          "sev2",
          "sev3",
          "sev4",
          "unknown"
        ]
      },
      "triggerSource": {
        "type": "string",
        "enum": [
          "monitoring",
          "support_ticket",
          "customer_report",
          "internal",
          "automated"
        ]
      },
      "affectedService": {
        "type": "string",
        "description": "Primary service/feature affected"
      },
      "customerImpact": {
        "type": "string",
        "description": "Initial impact assessment"
      }
    },
    "required": [
      "incidentId"
    ]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "incidentSummary": {
        "type": "object"
      },
      "impactAssessment": {
        "type": "object"
      },
      "responseTeam": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "timeline": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "communications": {
        "type": "object"
      },
      "nextActions": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "postMortemRequired": {
        "type": "boolean"
      }
    }
  },
  "metrics": {
    "primary": "mean_time_to_resolution",
    "secondary": [
      "mean_time_to_detect",
      "mean_time_to_communicate",
      "customer_satisfaction_post_incident",
      "recurrence_rate"
    ],
    "benchmarks": {
      "excellent": "< 1 hour MTTR for Sev1",
      "good": "1-4 hours MTTR for Sev1",
      "needs_improvement": "> 4 hours MTTR for Sev1"
    }
  },
  "orchestrates": [
    "support_ops/ticket_prioritizer",
    "support_ops/escalation_predictor",
    "product_ops/incident_analyzer",
    "customer_success/red_flag_detector",
    "customer_success/escalation_manager"
  ],
  "temperature": 0,
  "tags": [
    "meta",
    "orchestration",
    "incident",
    "support",
    "engineering",
    "communication",
    "experimental"
  ],
  "platforms": {
    "claude": {
      "triggers": [
        "help with Cross Functional Incident Coordinator"
      ]
    },
    "cursor": {},
    "skeneflow": {}
  }
}
